{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28
  },
  "configurePresets": [
    {
      "name": "iagpu-x64-linux",
      "displayName": "IAGPU Linux x64 (Clang)",
      "inherits": "x64-linux",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/IACrux/cmake/toolchains/x64-linux-clang.cmake"
      }
    },
    {
      "name": "iagpu-arm64-linux",
      "displayName": "IAGPU Linux ARM64 (Clang Cross)",
      "inherits": "arm64-linux",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/IACrux/cmake/toolchains/arm64-linux-clang.cmake"
      }
    },
    {
      "name": "iagpu-x64-windows",
      "displayName": "IAGPU Windows x64 (Clang)",
      "inherits": "x64-windows",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/IACrux/cmake/toolchains/x64-windows-clang.cmake"
      }
    },
    {
      "name": "iagpu-arm64-windows",
      "displayName": "IAGPU Windows ARM64 (Clang Cross)",
      "inherits": "arm64-windows",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/IACrux/cmake/toolchains/arm64-windows-clang.cmake"
      }
    },
    {
      "name": "iagpu-x64-windows-cross",
      "displayName": "IAGPU Windows x64 (Clang Cross Linux Host)",
      "inherits": "x64-windows-cross",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/IACrux/cmake/toolchains/x64-windows-cross-clang.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "iagpu-x64-linux",
      "configurePreset": "iagpu-x64-linux"
    },
    {
      "name": "iagpu-x64-windows",
      "configurePreset": "iagpu-x64-windows"
    }
  ],
  "testPresets": [
    {
      "name": "iagpu-x64-linux",
      "configurePreset": "iagpu-x64-linux",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "iagpu-x64-windows",
      "configurePreset": "iagpu-x64-windows",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      }
    }
  ],
  "include": [
    "IACrux/CMakePresets.json"
  ]
}